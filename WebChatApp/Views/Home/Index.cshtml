

@{
    ViewData["Title"] = "Home Page";
}

<div class="container p-0">


    <div class="card">

        <div class="row g-0">
            <!-- Chats-->
            <div class="col-12 col-lg-5 col-xl-3 border-right">
                
               
                <form method="post"  class="list-group-item list-group-item-action border-0">

                    <div class=" align-items-start">
                        
                        <div class="flex-grow-1 ml-3">
                            <input type="text" name="Name" placeholder="Name" />

                        </div>
                        <button  type="submit" title="Oluştur">Oluştur</button>
                            


                    </div>
                </form>

                     @if (ViewBag.Chats?.Values != null) foreach (var item in ViewBag.Chats?.Values)
                     {
                      <a href="@item.Id" class="list-group-item list-group-item-action border-0">
                         
                          <div class="d-flex align-items-start">
                              <img src="https://bootdey.com/img/Content/avatar/avatar5.png" class="rounded-circle mr-1" alt="Vanessa Tucker" width="40" height="40">
                              <div class="flex-grow-1 ml-3">
                                 @item.Name
                              </div>
                          </div>
                      </a>
                     }

                <a href="/@(ViewBag.SelectedChat?.Id)?chatPageIndex=@(ViewBag.chatPageIndex+1)">Daha fazla yukle</a>


                 <hr class="d-block d-lg-none mt-1 mb-0">
        </div>
        <!--Chats end-->
        <!--Messages-->
           <div class="col-12 col-lg-7 col-xl-9">
    <div class="py-2 px-4 border-bottom d-none d-lg-block">
        <div class="d-flex align-items-center py-1">
            <div class="position-relative">
                <img src="https://bootdey.com/img/Content/avatar/avatar3.png" class="rounded-circle mr-1" alt="Sharon Lessman" width="40" height="40">
            </div>
            <div class="flex-grow-1 pl-3">
                            <strong>@ViewBag.SelectedChat?.Name</strong>
                <div class="text-muted small"><em></em></div>
            </div>
            <div>
                         </div>
        </div>
    </div>
    <div class="position-relative">
                    <div class="chat-messages p-4" id="messagesList">

                        @if(ViewBag.Messages?.Values!=null)foreach (var item in ViewBag.Messages.Values)
                        {

                                <div class="@((item.MySend==true)?"chat-message-right":"chat-message-left") pb-4">
                <div>
                    <img src="https://bootdey.com/img/Content/avatar/avatar1.png" class="rounded-circle mr-1" alt="Chris Wood" width="40" height="40">
                    <div class="text-muted small text-nowrap mt-2">@item.SendTime</div>
                </div>
                <div class="flex-shrink-1 bg-light rounded py-2 px-3 mr-3">
                                    <div class="font-weight-bold mb-1">@item.SenderName</div>
                    @item.Message
                </div>
            </div>
                        }
            

           

        </div>
    </div>
    <div id="sendMessageForm"  class="flex-grow-0 py-3 px-4 border-top">
        <div class="input-group">


                        <input type="hidden" name="ChatId" id="chatIdInput" value="@(ViewBag.SelectedChat?.Id)">

                        <input type="text" name="SenderName" id="userInput" class="form-control" placeholder="Sender name">

                        <input type="text" name="Message" id="messageInput" class="form-control" placeholder="Type your message">

                        <button id="sendButton" class="btn btn-primary">Send</button>
        </div>
    </div>
</div>


        </div>
    </div>
</div>

